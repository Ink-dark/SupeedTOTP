                <TextBlock Text="测试信息：" FontSize="16" FontWeight="Bold" Margin="0 0 0 5"/>
                <TextBlock Text="- 窗口尺寸：400x300" FontSize="14"/>
                <TextBlock Text="- Avalonia 11.0.0" FontSize="14"/>
                <TextBlock Text="- .NET 8.0" FontSize="14"/>
