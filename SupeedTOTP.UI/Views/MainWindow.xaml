    <Grid Background="#FFFFFF">
        <StackPanel Margin="20" VerticalAlignment="Center">
            <TextBlock Text="SupeedTOTP" FontSize="28" FontWeight="Bold" Margin="0 0 0 20" HorizontalAlignment="Center"/>
            <TextBlock Text="TOTP令牌生成器" FontSize="18" Margin="0 0 0 10" HorizontalAlignment="Center"/>
            <TextBlock Text="程序已成功启动！" FontSize="14" Margin="0 0 0 30" HorizontalAlignment="Center"/>
            
